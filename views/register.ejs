<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> 
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <title>Register</title>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Registrarse</h3>
                </div>
                <div class="card-body">
                      <form action="/register" method="POST">
                        <div class="mb-3">
                          <label for="user">User</label>
                          <input type="text" name="user" required tabindex="1" autofocus class="form-control">
                        </div>
                        <div class="mb-3">
                          <label for="user">Full Name</label>
                          <input type="text" name="name" required tabindex="2" class="form-control">
                        </div>
                        <div class="mb-3">
                          <label for="rol">Rol: </label>                          
                            <select id="rol" name="rol" class="select-css" tabindex="3" class="form-control">
                              <option value="admin" selected>Admin</option>
                              <option value="data entry">Data Entry</option>                    
                            </select>
                          </div>
                          <div class="mb-3">
                            <label for="pass">Password</label>
                            <input type="password" name="pass" required tabindex="4" class="form-control" >
                          </div>
                          <div class="d-grid"> 
                            <input type="submit" value="Save" class="btn btn-primary form-control"> 
                          </div>
                          <br>
                          <div class="d-grid">
                            <a href="/login"  class="btn btn-secondary" class="form-control">Cancel</a>        
                          </div>
                      </form>	
                    </div>	
                  </div>
                </div>
              </div>
            </div>
           


    		
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<% if (typeof alert != "undefined")  { %>
 <script>
 Swal.fire({
   title:'<%= alertTitle %>',
   text:'<%= alertMessage %>',
   icon:'<%= alertIcon %>',
   showConfirmButton: <%= showConfirmButton %>,
   timer: <%= timer %>
 }).then(()=>{
   window.location='/<%= ruta %>'
 })
 </script>
<% } %>
 </div>
</body>
</html>